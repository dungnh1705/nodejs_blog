<div class="mt-4">
    <h3>KHÓA HỌC CỦA TÔI</h3>
    <table class="table mt-4">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Tên khóa học</th>
            <th scope="col">Slug</th>
            <th scope="col">Ngày tạo</th>
        </tr>
    </thead>
    <tbody>
        {{#each courses}}
        <tr>
            <th scope="row">{{sum @index 1}}</th>
            <td>{{this.name}}</td>
            <td>{{this.slug}}</td>
            <td>{{this.createdAt}}</td>
        </tr>        
        {{/each}}
    </tbody>
    </table>
</div>